{
  "extends": ["stylelint-config-standard"],
  "overrides": [
    {
      "files": [
        "**/*.js",
        "**/*.cjs",
        "**/*.mjs",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
      ],
      "customSyntax": "postcss-styled-syntax",
      "rules": {
        "nesting-selector-no-missing-scoping-root": null
      }
    }
  ]
}
